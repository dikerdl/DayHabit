<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jarimport.dl.dayhabit.fragment.UserFragment"
    android:background="@color/colorGray">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/person_bg33"
        android:layout_marginTop="60dp"
        >
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/mUserPortrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/mPersonName"
            android:layout_below="@id/mUserPortrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="userName"
            android:textColor="@color/colorBlue"
            android:textSize="16sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:orientation="vertical"
        android:padding="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/colorGray4"
            android:padding="10dp">

            <TextView
                android:clickable="true"
                android:id="@+id/mClearCache"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:gravity="start|center_vertical"

                android:background="@color/colorGray4"
                android:textColor="@color/colorBlack2"/>

            <TextView
                android:id="@+id/mShowCacheSize"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1.4M"
                android:gravity="right"
                android:textColor="@color/colorBlack2"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlue" />

        <Button
            android:padding="10dp"
            android:id="@+id/mChangeAccount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="切换账号"
            android:gravity="start|center_vertical"
            android:button="@null"
            android:background="@color/colorGray4"
            android:textColor="@color/colorBlack2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlue" />
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/mExitApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出应用"
            android:button="@null"
            android:background="@color/colorGreen"/>
    </LinearLayout>

    <com.jarimport.dl.dayhabit.view.MyToolbar
        android:id="@+id/mToolbar4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

    </com.jarimport.dl.dayhabit.view.MyToolbar>

</FrameLayout>
